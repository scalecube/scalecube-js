{
  "name": "@scalecube/scalecube-js",
  "version": "0.1.0",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": "github:scalecube/scalecube-js",
  "description": "Scalecube-js provides microservices pattern, in easy to use way. Supporting NodeJS and Browers (your client doesn't have to be mono!)",
  "keywords": [
    "scalecube",
    "scalecube-js",
    "microservices",
    "services",
    "discovery",
    "cluster"
  ],
  "scripts": {
    "pre-push": "yarn lint && yarn build && yarn test",
    "update-scalecube": "lerna clean --yes && rm -rf node_modules/@scalecube && yarn install && yarn bootstrap",
    "start": "http-server -a localhost -p 8000",
    "start-node-example": "lerna run start-node-example",
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "build": "lerna run build",
    "test": "lerna run test",
    "test-dom-env": "lerna run test-dom-env",
    "test-node-env": "lerna run test-node-env",
    "lint": "remark . --output && lerna run lint",
    "doc": "lerna run doc"
  },
  "author": "Scalecube (https://github.com/scalecube/scalecube-js)",
  "license": "MIT",
  "dependencies": {
    "husky": "^1.3.1"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "lerna": "^3.13.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "remark-cli": "^6.0.1",
    "remark-lint": "^6.0.4",
    "remark-preset-lint-recommended": "^3.0.2",
    "tslint-config-prettier": "^1.17.0"
  }
}
