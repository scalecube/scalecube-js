{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2017.object", "es5", "es6", "es2016"],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "test/**/*"]
}
