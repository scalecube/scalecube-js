{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["dom", "es2015", "es2017.object", "es5", "es6", "es2016"],
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.*"]
}
